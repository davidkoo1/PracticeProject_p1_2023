@using PracticeProject.ViewModels;
@model HomeWorkViewModel
@{
    ViewData["Title"] = "Edit homework";
}

<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #ff6666;
        font-size: 36px;
        margin-bottom: 10px;
        text-align: center;
    }

    /* Stylish form container */
    .form-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    /* Stylish form input fields */
    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
    }

    /* Stylish form submit button */
    .submit-button {
        background-color: blueviolet;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
        width: 100%;
    }

        .submit-button:hover {
            background-color: #8a2999; /* Светлый оттенок сине-фиолетового цвета при наведении */
            color: #fff;
        }

</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="form-container">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        @{
            await Html.RenderPartialAsync("_CreateHomework", Model);
        }
        <button type="submit" class="submit-button">Edit</button>
    </form>
    <a type="button" class="btn btn-danger" style="width: 100%; margin-top: 10px;" href="@Url.Action("Delete", "HomeWork", new { id = Model.Id})">
        <i class="fa fa-trash"></i> Delete
    </a>
</div>