@model ICollection<LabWork>

<style>

    .edit {
        text-align: center;
        background-color: blueviolet; /* Темно-зеленый цвет */
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
        display: block;
        text-decoration: none;
        margin: 5px auto;
        width: 90%;
    }

        .edit:hover {
            background-color: #8a2999; /* Светлый оттенок сине-фиолетового цвета при наведении */
            color: #fff;
            text-decoration: none;
        }
</style>

@foreach (var item in Model)
{
    @if (item.Lesson.Course.User != null)
    {
        @if (User.Identity.IsAuthenticated && User.IsInRole("admin") || item.Lesson.Course.User.Id == User.GetUserId())
        {
            <a class="edit" href="@Url.Action("Edit", "LabWork", new {id = item.Id})">Edit</a>
        }
    }
    <br />
    @Html.Raw(item.Task)
}